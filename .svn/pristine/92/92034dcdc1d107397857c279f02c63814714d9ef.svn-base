import React from 'react';
import './Pagination.css';

/**
 * [공통 페이징 컴포넌트]
 * 
 * @param {Object} info - pageInfo 객체
 * @param {Function} goPage - 페이지 이동 함수(URL 변경용)
 */

const Pagination = ({info, goPage}) => {

    // 데이터가 없거나 로딩 전이면 아무것도 그리지 않음
    if(!info || info.totalRecordCount === 0){
        return null;
    }

    const { startPage, endPage, currentPage, totalPage } = info;

    const pages = [];
    for (let i = startPage; i <= endPage; i++) {
        pages.push(i);
    }

    return (
        <div className='pagination-area'>
            {startPage > 1 && (
                <button onClick={() => goPage(startPage - 1)} className='pg-btn prev'>
                    &lt; 이전
                </button>
            )}

            {pages.map((pageNum) => (
                <button key={pageNum} onClick={() => goPage(pageNum)} className={`pg-btn ${currentPage === pageNum ? 'active' : ''}`}>
                    {pageNum}
                </button>
            ))}

            {endPage < totalPage && (
                <button  onClick={() => goPage(endPage + 1)} className='pg-btn next'>
                    다음 &gt;
                </button>
            )}
        </div>
    );
};

export default Pagination;